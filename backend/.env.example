# ======================================================
# [LLM] PROVIDER - ESCOLHA: groq, openai, ou offline
# ======================================================
# GROQ (Recomendado - gr√°tis e r√°pido)
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GROQ_MODEL=llama-3.3-70b-versatile

# OPENAI (Alternativa - pago)
# OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# OPENAI_MODEL=gpt-4-mini

# Se nenhuma chave for fornecida, o sistema rodar√° em MODO OFFLINE (mock)

# ======================================================
# [EMBEDDINGS] ESCOLHA O PROVIDER
# ======================================================
# "huggingface" = API externa (RECOMENDADO para EC2 t3.micro com RAM limitada)
# "local" = sentence-transformers local (melhor performance, requer 2GB+ RAM)
EMBEDDING_PROVIDER=huggingface

# Token do Hugging Face (obtenha em: https://huggingface.co/settings/tokens)
HF_API_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Modelo de embeddings (384 dimens√µes - otimizado para performance)
HF_EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# Diret√≥rio local de ChromaDB (consolidado)
CHROMA_DB_DIR=./data/chroma_db

# ======================================================
# [DATABASE] CONFIGURA√á√ÉO
# ======================================================
DATABASE_URL=sqlite:///./tr4ction.db

# ======================================================
# [SECURITY] MUDE ESTAS VARI√ÅVEIS EM PRODU√á√ÉO!
# ======================================================

# JWT - Gere uma chave segura com: openssl rand -hex 32
# IMPORTANTE: Mude em produ√ß√£o!
JWT_SECRET_KEY=tr4ction-change-this-in-production-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# CORS - Origens permitidas (separadas por v√≠rgula)
# Desenvolvimento: http://localhost:3000
# Produ√ß√£o: https://seudominio.com, https://www.seudominio.com
CORS_ORIGINS=https://tr4ction-v2-agent.vercel.app,https://www.tr4ction-v2-agent.vercel.app,http://localhost:3000,http://127.0.0.1:3000

# ======================================================
# [LIMITS] LIMITES DE UPLOAD E RATE LIMITING
# ======================================================
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=.pdf,.pptx,.docx,.txt,.xlsx

RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ======================================================
# [ENVIRONMENT] AMBIENTE
# ======================================================
# "development" ou "production"
ENVIRONMENT=development
DEBUG_MODE=false

# ======================================================
# [OPTIONAL] CONFIGURA√á√ïES ADICIONAIS
